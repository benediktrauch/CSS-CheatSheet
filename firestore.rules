service cloud.firestore {
  match /databases/{database}/documents {
  	match /users/{userId} {
      allow read, update, delete: if request.auth.uid == userId;
      allow create: if request.auth.uid != null;
    }

    match /snippet/{snippet} {
      allow get, list: if true;

      allow create, update: if get(/databases/$(database)/documents/permission/moderator/$(request.auth.uid)) == true;
      allow delete: if get(/databases/$(database)/documents/permission/admin/$(request.auth.uid)) == true;
    }


    match /permission/{permission} {
      allow get, list: if false;

	  allow create,update,delete: if false;
    }


    match /deleted/{deleted} {
      allow get, list: if true;

	  allow create, update: if get(/databases/$(database)/documents/permission/moderator/$(request.auth.uid)) == true;

      allow delete: if false;
    }
  }
}
